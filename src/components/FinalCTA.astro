---
interface Props {
  calendarUrl?: string;
}

const { calendarUrl = "#" } = Astro.props;
---

<section id="final-cta" class="py-32 px-8 bg-navy text-ivory">
  <div class="max-w-4xl mx-auto text-center">
    <h2 class="text-4xl md:text-5xl font-display font-bold mb-6">
      Ready to see what you're missing?
    </h2>
    <p class="text-xl text-ivory/90 mb-4 leading-relaxed">
      Start your free week. We'll build a custom monitoring setup for your portfolio and deliver one week of news briefs. No payment required.
    </p>
    <p class="text-lg text-ivory/70 mb-10 leading-relaxed">
      If it's not valuable, you walk away. If it is, you keep it running.
    </p>
    <div>
      <a
        href={calendarUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="bg-gold text-ivory px-10 py-4 text-lg font-medium hover:bg-gold/90 transition inline-flex items-center space-x-2 group"
        onclick="plausible('booking_click')"
      >
        <span>Start your free week</span>
        <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </a>
      <p class="text-sm text-ivory/60 mt-3">15-minute setup call</p>
    </div>
  </div>
</section>
