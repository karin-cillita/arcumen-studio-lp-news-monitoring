---
interface Props {
  calendarUrl?: string;
  formUrl?: string;
}

const { calendarUrl = "#", formUrl = "#" } = Astro.props;
---

<section id="final-cta" class="py-32 px-8 bg-navy text-ivory">
  <div class="max-w-4xl mx-auto text-center">
    <h2 class="text-4xl md:text-5xl font-display font-bold mb-6">
      Ready to see what you're missing?
    </h2>
    <p class="text-xl text-ivory/90 mb-4 leading-relaxed">
      Get your first brief â€” no call needed. Just tell us which companies to watch, and we'll deliver your first news brief within 24 hours.
    </p>
    <p class="text-lg text-ivory/70 mb-10 leading-relaxed">
      If it's not valuable, you walk away. If it is, you keep it running.
    </p>
    <div>
      <a
        href={formUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="bg-gold text-ivory px-10 py-4 text-lg font-medium hover:bg-gold/90 transition inline-flex items-center space-x-2 group"
        onclick="plausible('brief_click')"
      >
        <span>Get your first brief</span>
        <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </a>
      <p class="text-sm text-ivory/60 mt-3">Takes 2 minutes | First brief in 24 hours</p>
      <p class="text-sm text-ivory/50 mt-2">
        or <a href={calendarUrl} target="_blank" rel="noopener noreferrer" class="underline hover:text-ivory/80 transition-colors" onclick="plausible('booking_click')">Schedule a call first</a>
      </p>
    </div>
  </div>
</section>
