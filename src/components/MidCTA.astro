---
interface Props {
  calendarUrl?: string;
  formUrl?: string;
}

const { calendarUrl = "#", formUrl = "#" } = Astro.props;
---

<section id="mid-cta" class="py-20 px-8 bg-ivory">
  <div class="max-w-4xl mx-auto text-center">
    <a
      href={formUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="bg-gold text-ivory px-10 py-4 text-lg font-medium hover:bg-gold/90 transition inline-flex items-center space-x-2 group"
      onclick="plausible('brief_click')"
    >
      <span>Get your first brief</span>
      <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
      </svg>
    </a>
    <p class="text-sm text-stone mt-3">Takes 2 minutes | First brief in 24 hours</p>
    <p class="text-sm text-stone/70 mt-2">
      or <a href={calendarUrl} target="_blank" rel="noopener noreferrer" class="underline hover:text-navy transition-colors" onclick="plausible('booking_click')">Schedule a call first</a>
    </p>
  </div>
</section>
