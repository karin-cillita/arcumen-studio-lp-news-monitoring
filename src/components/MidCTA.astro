---
interface Props {
  calendarUrl?: string;
}

const { calendarUrl = "#" } = Astro.props;
---

<section id="mid-cta" class="py-20 px-8 bg-ivory">
  <div class="max-w-4xl mx-auto text-center">
    <a
      href={calendarUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="bg-gold text-ivory px-10 py-4 text-lg font-medium hover:bg-gold/90 transition inline-flex items-center space-x-2 group"
      onclick="plausible('booking_click')"
    >
      <span>Start your free week</span>
      <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
      </svg>
    </a>
    <p class="text-sm text-stone mt-3">Takes 15 minutes to set up</p>
  </div>
</section>
